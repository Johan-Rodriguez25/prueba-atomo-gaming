{
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["**/*.spec.ts"],
  "buildOptions": { "include": ["src"] },
  "typedocOptions": {
    "entryPoints": [""],
    "out": "docs"
  }
}
